<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <ImageView
        android:id="@+id/page12_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/page12_main" />

    <ImageView
        android:id="@+id/page12_img_door"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="900dp"
        android:layout_marginTop="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/page12_btn_slider_door" />
    
    <Button
        android:id="@+id/page12_btn_door"
        android:layout_width="245dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginRight="900dp"
        android:layout_marginTop="50dp"
        android:alpha="0" />
    
    <ImageView
        android:id="@+id/page12_img_stair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="200dp"
        android:layout_marginTop="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/page12_btn_stairs" />
    
    <Button
        android:id="@+id/page12_btn_stair"
        android:layout_width="245dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginRight="255dp"
        android:layout_marginTop="50dp"
        android:alpha="0" />
    
    <ImageView
        android:id="@+id/page12_image_hiden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="635dp"
        android:scaleType="fitXY"
        android:src="@drawable/page10_btn_hidden" />

    <Button
        android:id="@+id/page12_btn_hiden"
        android:layout_width="265dp"
        android:layout_height="45dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="635dp"
        android:alpha="0" />
    <Button
        android:id="@+id/page11_btn_tv"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="560dp"
        android:alpha="0" />

    <ImageView
        android:id="@+id/page12_img_living_stair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="540dp"
        android:scaleType="fitXY"
        android:src="@drawable/page11_btn_all_living_stair" />
     <Button
        android:id="@+id/page12_btn_living_stair"
        android:layout_width="270dp"
        android:layout_height="75dp"
        android:layout_gravity="left"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="540dp"
        android:alpha="0" />

</FrameLayout>